<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RickRollMaui.MainPage">
			 
    <ScrollView>
        <VerticalStackLayout 
            Spacing="25" 
            Padding="30,0" 
            VerticalOptions="Center">

            <Image
                Source="rickroll.png"
                SemanticProperties.Description="Rick Roll Your Friends"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label 
                Text="Rick Roll Your Friends With Us"
                TextColor="BlueViolet"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="20"
                HorizontalOptions="Center" />

            <Label 
                Text="Enter The Phone Number To Rick Roll"
                FontSize="20"
                HorizontalOptions="Center" />

            <Entry 
                x:Name="PhoneNumber"
                Placeholder="+919876543210"
                HorizontalOptions="Center"
                FontSize="20" />

            <Button 
                x:Name="RickRollButton"
                Text="Rick Roll Now"
                Clicked="RickRollButtonClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
 
</ContentPage>
